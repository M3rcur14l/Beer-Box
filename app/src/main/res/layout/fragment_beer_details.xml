<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:layout_height="wrap_content">
    <ImageView android:id="@+id/beerImage"
               android:layout_width="80dp"
               android:layout_height="170dp"
               android:layout_marginTop="8dp"
               android:src="@drawable/beer"
               android:layout_marginStart="26dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintVertical_bias="0"
               android:layout_marginBottom="20dp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="@id/beerName"
               tools:ignore="ContentDescription"/>
    <TextView android:id="@+id/beerName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              app:layout_constraintRight_toRightOf="parent"
              android:textColor="@android:color/white"
              android:textSize="18sp"
              android:layout_marginEnd="26dp"
              android:layout_marginStart="20dp"
              app:layout_constraintLeft_toRightOf="@id/beerImage"
              app:layout_constraintTop_toTopOf="parent"
              android:fontFamily="@font/font_lato_semibold"
              tools:text="Bramling X"/>
    <TextView android:id="@+id/beerTagLine"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textSize="17sp"
              app:layout_constraintLeft_toLeftOf="@id/beerName"
              app:layout_constraintTop_toBottomOf="@id/beerName"
              android:fontFamily="@font/font_lato_regular"
              app:layout_constraintRight_toRightOf="@id/beerName"
              tools:text="Single Hop IPA Series - 2011."/>
    <TextView android:id="@+id/beerDescription"
              android:layout_width="0dp"
              android:textSize="17sp"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="@id/beerName"
              app:layout_constraintTop_toBottomOf="@id/beerTagLine"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="@id/beerName"
              android:layout_marginBottom="20dp"
              android:fontFamily="@font/font_lato_regular"
              tools:text="Good old Bramling Cross is elegant, refined, assured, (boring) and understated. Understated that is unless you hop the living daylights out of a beer with it. This is Bramling Cross re-invented and re-imagined, and shows just what can be done with English hops if you use enough of them. Poor Bramling Cross normally gets lost in a woeful stream of conformist brown ales made by sleepy cask ale brewers. But not anymore. "/>
    <ImageView android:id="@+id/beerEbc"
               android:layout_width="45dp"
               android:layout_height="32dp"
               android:scaleType="fitXY"
               android:tint="@color/colorAccent"
               android:src="@drawable/bookmark"
               android:layout_marginEnd="16dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               tools:ignore="ContentDescription"/>
</androidx.constraintlayout.widget.ConstraintLayout>